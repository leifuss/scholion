{
  // GitHub Codespaces configuration for the Islamic Cartography pipeline.
  //
  // Opens a fully-configured environment with Python 3.11, Tesseract OCR
  // (eng + Arabic + French + German + Turkish), and all Python dependencies.
  //
  // To open: green "Code" button on GitHub → Codespaces → Create codespace
  //
  // After the container starts:
  //   npm install -g @anthropic-ai/claude-code   (install Claude Code)
  //   claude                                      (start interactive session)
  //
  // Or run the pipeline directly:
  //   source venv/bin/activate
  //   make extract-dry
  //   make extract

  "name": "Research Corpus Pipeline",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",

  "features": {
    // Git LFS support (for pulling PDFs from LFS storage)
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    // Node.js (for Claude Code CLI)
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "secrets": {
    // Set these in Codespace secrets (github.com/settings/codespaces)
    // or in the repo settings (Settings → Secrets → Codespaces)
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key (required for bibliography extraction, translation, RAG chat)"
    },
    "GEMINI_API_KEY": {
      "description": "Gemini API key (optional, preferred for RAG chat)"
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "description": "Path to Google Cloud Vision service account JSON (optional)"
    }
  },

  "remoteEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}"
  },

  // Use 4-core machine for faster extraction (set in Codespace settings)
  "hostRequirements": {
    "cpus": 4
  }
}
